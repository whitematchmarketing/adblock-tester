{
  "name": "checkadblock",
  "version": "2.0.5",
  "repository": "git@github.com:ymatuhin/checkadblock.git",
  "author": "ymatuhin <ym@ymatuhin.ru>",
  "license": "MIT",
  "devDependencies": {
    "bettertext.css": "^2.0.4",
    "http-server-ssl": "^0.0.7",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-interpolate-html": "^1.0.1",
    "parcel-plugin-static-files-copy": "^2.2.1",
    "pug": "^2.0.4",
    "sass": "^1.24.0",
    "typescript": "^3.7.4"
  },
  "scripts": {
    "start": "yarn dev",
    "dev": "parcel serve ./src/index.pug --out-dir ./dev --https --no-cache --log-level 4",
    "build": "NODE_ENV=test parcel build ./src/index.pug --out-dir ./docs --no-cache --detailed-report",
    "prebuild": "rm -rf ./docs/**",
    "postversion": "sed \"s/VERSION=.*/VERSION=$npm_package_version/\" .env | tee .env",
    "deploy": "./deploy.sh \"$npm_package_version\""
  }
}
